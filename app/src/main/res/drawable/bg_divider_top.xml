<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="?colorSurface" />
        </shape>
    </item>
    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2px"
                android:color="#1F000000" />
        </shape>
    </item>

</layer-list>